{{ ansible_managed | comment }}
hdmi_force_hotplug=0
enable_uart=0

gpu_mem={{ rpi_gpu_mem }}

dtparam=audio=off

[all]
{% if not rpi_wifi %}
dtoverlay=pi3-disable-wifi
dtoverlay=disable-wifi
{% endif %}
{% if not rpi_bt %}
dtoverlay=pi3-disable-bt
dtoverlay=disable-bt
{% endif %}

dtparam=pwr_led_trigger=heartbeat
dtparam={% for point in rpi_fan %}poe_fan_temp{{ loop.index0 }}={{ point.temp }},poe_fan_temp{{ loop.index0 }}_hyst={{ point.hyst }}{% if not loop.last %},{% endif %}{% endfor %}

# In theory this should help with unstable PoE HATs
max_usb_current=1

dtparam=spi=off

[pi4]
dtoverlay=vc4-fkms-v3d
max_framebuffers=2
